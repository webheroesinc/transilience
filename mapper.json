{
    "movie": {
	".table": "movies:m",
	".key": "movie_id",
	
	".segments": [{
	    "key": "$movie",
	    "size": "single",
	    "where": "movie_id"
	}],

	"id": "{movie_id}",
	"movie_id": false,
	"title": true,
	"description": true,
	"year": true,
	"details": {
	    "rating": true,
	    "length": true
	},
	
	"categories": {
	    ".table": "categories:c",
	    ".key": "category_id",
	    ".has": {
		"movie_has_category:mhc": ["m.movie_id", "mhc.movie_id"]
	    },
	    ".join": ["c.category_id", "mhc.category_id"],
	    "name": true,
	    "description": true
	},
	
	"actors": {
	    ".table": "actors:a",
	    ".key": "actor_id",
	    ".has": {
		"movie_has_actor:mha": ["m.movie_id", "mha.movie_id"]
	    },
	    ".join": ["a.actor_id", "mha.actor_id"],
	    ".segments": [{
		"key": "$actor",
		"size": "single",
		"where": "actor_id"
	    }],
	    "first_name": false,
	    "last_name": false,
	    "name": {
		"first": "{first_name}",
		"last": "{last_name}",
		"full": "{first_name} {last_name}"
	    },
	    "age": true
	}
    }
}
